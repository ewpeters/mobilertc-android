<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/camera_control"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/video_item_popup_window_bg"
    android:clickable="true"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="64dp"
        android:layout_height="102dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/camera_controller_item_bg"
            android:clickable="true">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_close" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/camera_controller_item_bg_default">

            <ImageView
                android:id="@+id/iv_plus"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="2dp"
                android:background="@drawable/camera_controller_item_press_bg"
                android:clickable="true"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_plus" />

            <ImageView
                android:id="@+id/iv_minus"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="2dp"
                android:background="@drawable/camera_controller_item_press_bg"
                android:clickable="true"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_minus" />
        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/controller_right_bg"
        android:padding="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/controller_direction_bg">

            <View
                android:id="@+id/center"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/iv_up"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_above="@id/center"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                android:background="@drawable/camera_controller_item_press_bg"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/icon_up_arrow" />

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@id/center"
                android:background="@drawable/camera_controller_item_press_bg"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/icon_right_arrow" />

            <ImageView
                android:id="@+id/iv_down"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_below="@id/center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:background="@drawable/camera_controller_item_press_bg"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/icon_down_arrow" />

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="2dp"
                android:layout_toStartOf="@id/center"
                android:background="@drawable/camera_controller_item_press_bg"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/icon_left_arrow" />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>